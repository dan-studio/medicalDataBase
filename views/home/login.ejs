<%- include('../partials/head')%>
<%- include('../partials/header')%>
<h1>로그인</h1>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <form id="log-form">
        <div class="form-group">
          <label for="exampleInputEmail1">E-mail</label>
          <input type="email" class="form-control <%= (errors.useremail)?'is-invalid':''%>" placeholder="E-mail"
            id="useremail" value="<%= useremail %>">
          <% if(errors.useremail){ %>
          <span class="invalid-feedback"><%= errors.useremail %></span>
          <% } %>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control <%= (errors.password)?'is-invalid':''%>" placeholder="Password"
            id="userpassword" value="">
          <% if(errors.password) { %>
          <span class="invalid-feedback"><%= errors.password %></span>
          <% } %>
        </div>
        <% if(errors.login){ %>
        <div class="invalid-feedback d-block"><%= errors.login %></div>
        <% } %>
        <button onclick="login()" class="login btn btn-white btn-block">로그인</button>
      </form>
      <br>
      <div>
        아이디가 없으신가요? <a href="/register">회원가입</a>
      </div>
    </div>
  </div>
</div>
<script src="../../public/js/login.js"> </script>
<!--flask js 호출-->
</body>

</html>