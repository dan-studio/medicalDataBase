<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <h3 class="contentBoxTop"><%= user.username %></h3>

      <form class="user-form" action="/users" method="post">
        <fieldset disabled>
          <div class="form-group row">
            <label for="name" class="col-sm-1 col-form-label mb-2">Name</label>
            <div class="col-sm-4">
              <input class="form-control" type="text" id="name" name="name" value="<%= user.username %>">
            </div>
          </div>
          <div class="form-group row">
            <label for="email" class="col-sm-1 col-form-label mb-2">Email</label>
            <div class="col-sm-4">
              <input class="form-control" type="text" id="email" name="email" value="<%= user.useremail %>">
            </div>
          </div>
        </fieldset>
      </form>

      <div>
        <a class="btn btn-white" href="/users">Back</a>
        <form action="/users/<%= user.useremail %>?_method=delete" method="post" class="d-inline">
          <a class="btn btn-white" href="javascript:void(0)" onclick="confirm('정말 해당 아이디를 삭제하시겠어요?')?this.parentElement.submit():null;">Delete</a>
        </form>
      </div>

    </div>
  </body>
</html>